# =================================
# DCA Agent Environment Variables
# =================================

# ============ DATABASE ============
# NeonDB PostgreSQL connection string
# Get this from: https://console.neon.tech/app/projects
# Format: postgresql://username:password@hostname/database?sslmode=require
DATABASE_URL="postgresql://username:password@your-neon-hostname.neon.tech/dca_agent?sslmode=require"

# ============ BLOCKCHAIN ============
# Arbitrum RPC URL (Alchemy, Infura, QuickNode)
ARBITRUM_RPC_URL="https://arb1.arbitrum.io/rpc"

# Private key for custodial DCA execution (without 0x prefix)
# WARNING: Keep this secure! Only for development/MVP
PRIVATE_KEY="your_private_key_here"

# ============ AI PROVIDER ============
# Choose one or more AI providers
OPENROUTER_API_KEY="your_openrouter_key"
# OPENAI_API_KEY="your_openai_key" 
# XAI_API_KEY="your_xai_key"
# HYPERBOLIC_API_KEY="your_hyperbolic_key"

# Preferred AI provider (openRouter, openai, xai, hyperbolic)
AI_PROVIDER="openRouter"

# Optional: Override default model
# AI_MODEL="claude-3-sonnet-20241022"

# ============ MCP INTEGRATION ============
# Ember MCP Server for swap operations
EMBER_MCP_SERVER_URL="https://api.emberai.xyz/mcp"

# ============ API SERVER ============
# Port for the DCA agent server
PORT=3001

# CORS origin for frontend integration
CORS_ORIGIN="http://localhost:3000"

# Enable CORS (default: true)
ENABLE_CORS=true

# API base path (optional)
# BASE_PATH="/api/v1"

# ============ AUTOMATION ============
# Scheduler interval in seconds (default: 60)
SCHEDULER_INTERVAL_SECONDS=60

# Maximum concurrent DCA executions
MAX_CONCURRENT_EXECUTIONS=50

# ============ AGENT CONFIGURATION ============
# Agent metadata (optional overrides)
AGENT_NAME="DCA Agent"
AGENT_VERSION="1.0.0"
AGENT_DESCRIPTION="Multi-user DCA automation platform"
AGENT_URL="http://localhost:3001"

# ============ DEVELOPMENT ============
# Environment mode
NODE_ENV=development

# Enable detailed logging
DEBUG=false

# Enable metrics collection
ENABLE_METRICS=false